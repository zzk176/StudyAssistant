<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="1dp"
    android:background="@drawable/settingsbg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:background="@drawable/item_unselect"
        android:layout_margin="8dp"
        android:paddingVertical="6dp"
        android:paddingHorizontal="10dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text= "今天你已经学习了 "
            android:textColor="@color/colorWhite"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text= "1 小时 36 分钟"
            android:textColor="@color/colorWhite"
            android:textSize="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text= "打断次数 3"
            android:textColor="@color/colorWhite"
            android:textSize="22dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/item_unselect"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="8dp"
        android:paddingVertical="6dp"
        android:paddingHorizontal="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight = "1"
            android:text="6月7日 昨天"
            android:textColor="@color/colorWhite"
            android:textSize="18dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="学习时间 2 小时 12 分钟     打断 4 次"
            android:textSize="18dp"
            android:textColor="#ffe434" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/item_unselect"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="8dp"
        android:paddingVertical="6dp"
        android:paddingHorizontal="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight = "1"
            android:text="6月6日 星期三"
            android:textColor="@color/colorWhite"
            android:textSize="18dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="学习时间 1 小时 59 分钟     打断 2 次"
            android:textSize="18dp"
            android:textColor="#ffe434" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/item_unselect"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="8dp"
        android:paddingVertical="6dp"
        android:paddingHorizontal="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight = "1"
            android:text="6月5日 星期二"
            android:textColor="@color/colorWhite"
            android:textSize="18dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="学习时间 3 小时 22 分钟     打断 7 次"
            android:textSize="18dp"
            android:textColor="#ffe434" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/item_unselect"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="8dp"
        android:paddingVertical="6dp"
        android:paddingHorizontal="10dp"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看更多历史纪录"
            android:textColor="@color/colorWhite"
            android:textSize="18dp"
            android:background="@color/colorNo"/>

    </LinearLayout>

</LinearLayout>
